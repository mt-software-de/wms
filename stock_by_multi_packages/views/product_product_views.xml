<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_template_is_multi_packages_view" model="ir.ui.view">
            <field name="name">product.template.inherit.is_multi_packages</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <group name="inventory" position="inside">
                    <group name="is_multi_packages">
                        <field name="is_multi_packages"/>
                    </group>
                </group>
            </field>
        </record>
        <record id="product_product_is_multi_packages_view" model="ir.ui.view">
            <field name="name">product.product.inherit.is_multi_packages</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <field name="is_multi_packages" position="after">
                    <field name="lot_ids" nolabel="1" colspan="2" readonly="1" attrs="{'invisible': [('is_multi_packages', '=', False)]}">
                        <tree>
                            <field name="name"/>
                            <field name="package_ids"/>
                        </tree>
                        <form>
                            <field name="name"/>
                            <field name="package_ids" readonly="1">
                                <tree>
                                    <field name="product_id"/>
                                    <field name="qty"/>
                                </tree>
                            </field>
                        </form>
                    </field>
                </field>
            </field>
        </record>
    </data>
</odoo>
