<odoo>
    <record id="stock_picking_form_view" model="ir.ui.view">
        <field name="name">stock.picking full location reservation</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <button name="action_confirm" position="before">
                <field name="needs_multi_packages_split" invisible="1" />
                <button name="open_multi_packages_reception" type="object" string="Split into Multi Packages" attrs="{'invisible': ['|', ('needs_multi_packages_split', '=', False), ('picking_type_code', '!=', 'incoming')]}"/>
            </button>
        </field>
    </record>
</odoo>
