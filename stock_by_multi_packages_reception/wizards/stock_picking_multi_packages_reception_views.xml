<odoo>
    <record id="stock_picking_multi_packages_reception_form_view" model="ir.ui.view">
        <field name="name">stock.picking.multi_packages.reception</field>
        <field name="model">stock.picking.multi_packages.reception</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="picking_ids" invisible="1" />
                    <separator string="Moves by mutli packages" colspan="4"/>
                    <field name="line_ids">
                        <tree editable="bottom">
                            <field name="move_id" />
                            <field name="product_id" />
                            <field name="qty" />
                            <field name="packages_amount" />
                            <field name="show_detailed" />
                            <field name="packages" attrs="{'invisible': [('show_detailed', '=', False)]}" />
                        </tree>
                    </field>
                </sheet>
                <footer>
                    <button name="action_confirm" type="object" string="Create multi packages" />
                </footer>
            </form>
        </field>
    </record>
    <record id="stock_picking_multi_packages_reception_action" model="ir.actions.act_window">
        <field name="name">Stock Picking Multi Packages Reception</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.picking.multi_packages.reception</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
